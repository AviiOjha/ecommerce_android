<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="@color/red"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="25dp"
                android:src="@drawable/user_male_icon"
                app:tint="@color/white" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_name"
                android:fontFamily="@font/sans_medium"
                android:textColor="@color/white"
                android:layout_marginStart="15dp"
                android:textSize="25sp"/>

            <ImageView
                android:id="@+id/closeMenuIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/close_icon"
                android:layout_gravity="top"
                android:layout_marginStart="30dp"
                android:layout_marginTop="8dp"
                app:tint="@color/white" />
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="25dp"
            android:paddingVertical="20dp">
            
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/home_icon_hollow"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:layout_marginStart="10dp"
                android:textSize="20sp"
                android:fontFamily="@font/sans_medium"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_break"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="25dp"
            android:paddingVertical="20dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/cart_icon"
                app:tint="@color/red" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Cart"
                android:layout_marginStart="10dp"
                android:textSize="20sp"
                android:fontFamily="@font/sans_medium"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_break"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:paddingHorizontal="25dp"
                android:paddingVertical="20dp">

                <LinearLayout
                    android:id="@+id/sideMenuDeals"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/deals_icon"
                        app:tint="@color/red"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Deals"
                        android:layout_marginStart="10dp"
                        android:textSize="20sp"
                        android:fontFamily="@font/sans_medium"/>

                    <ImageView
                        android:id="@+id/dropdownIcon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="160dp"
                        android:layout_marginTop="6dp"
                        android:rotation="180"
                        android:src="@drawable/dropdown_icon" />

                </LinearLayout>
                <TextView
                    android:id="@+id/drawerDealsOnProducts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Deals on products"
                    android:textSize="15sp"
                    android:layout_marginStart="35dp"
                    android:paddingVertical="8dp"
                    android:textColor="@color/light_gray"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/drawerDealsOnServices"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Deals on services"
                    android:textSize="15sp"
                    android:layout_marginStart="35dp"
                    android:paddingTop="8dp"
                    android:textColor="@color/light_gray"
                    android:visibility="gone"/>
            </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_break"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="25dp"
            android:paddingVertical="20dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/order_booking_icon"
                app:tint="@color/red" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order History"
                android:layout_marginStart="10dp"
                android:textSize="20sp"
                android:fontFamily="@font/sans_medium"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_break"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="25dp"
            android:paddingVertical="20dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/order_booking_icon"
                app:tint="@color/red" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Bookings"
                android:layout_marginStart="10dp"
                android:textSize="20sp"
                android:fontFamily="@font/sans_medium"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_break"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="25dp"
            android:paddingVertical="20dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/logout_icon"
                app:tint="@color/red" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:layout_marginStart="10dp"
                android:textSize="20sp"
                android:fontFamily="@font/sans_medium"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_break"/>

    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>