<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="18dp">

        <ImageView
            android:id="@+id/product_img"
            android:layout_width="@dimen/productWidth"
            android:layout_height="180dp"
            android:src="@drawable/service_cat1"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <TextView
            android:id="@+id/product_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="@dimen/productName"
            android:text="@string/cleaning_services"
            android:fontFamily="@font/sans_medium"/>

        <TextView
            android:id="@+id/product_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cleaning_description"
            android:textColor="@color/light_gray"
            android:textSize="@dimen/productDescription"
            android:fontFamily="@font/sans_medium"
            android:layout_marginVertical="1dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="12dp"/>

</LinearLayout>
